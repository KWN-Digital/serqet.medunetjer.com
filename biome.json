{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noConsoleLog": "error"
      },
      "style": {
        "useImportType": "off",
        "noNonNullAssertion": "off",
        "useNodejsImportProtocol": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "complexity": {
        "noForEach": "warn",
        "noBannedTypes": "off"
      },
      "performance": {
        "noAccumulatingSpread": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "files": {
    "ignore": [
      "dist/**",
      "node_modules/**",
      ".next/**",
      "build/**",
      "coverage/**"
    ]
  }
}
